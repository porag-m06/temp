<section class="comment--new border-primary bg-white flex">
  <h2 class="ff-headings fw-bold fs-700">New Comment</h2>
  <%= form_with model: @comment, url: post_comments_url(@post), local: true, class: 'form' do |form| %>

    <div class="form__field">
      <%= form.label :comment %>
      <%= form.text_area :text, size: "60x14", class: 'form__input' %>
    </div>

    <div class="form__actions">
      <%= form.submit 'Create Comment', class: 'btn btn--primary' %>
      <%= link_to 'Cancel', session[:previous_url], class: 'btn btn--primary' %>
    </div>
  <% end %>
</section>
